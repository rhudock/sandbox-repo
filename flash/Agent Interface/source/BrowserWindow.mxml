<?xml version="1.0" encoding="utf-8"?>
<!-- http://airexamples.com/2010/03/12/opening-a-new-window-in-adobe-air/ -->
<mx:Window name="BrowserWindow"
        xmlns:mx="http://www.adobe.com/2006/mxml"
        layout="absolute"
        width="800" height="600">
	
	<mx:TextInput top="0" height="20" id="location" text="http://www.adobe.com/software/flash/about/" />
    <mx:HTML id="browser"
			location="{location.text}"
            bottom="0"
			top="20"
			left="0"
			right="0" />
</mx:Window>